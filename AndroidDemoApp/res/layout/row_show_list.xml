<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_left"
    android:background="@drawable/list_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/rowImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
        android:layout_weight="0.19"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rowTitle"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_right"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="adshaohxwflhlmksjixmpqo3hf4mx89qym4xoqhifrx8y98rzmodjaoidjq89ny3cv9r1jqodjxawm8yfc298mu34crtjosd"
            android:textColor="@color/DeepBlue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/rowSubTitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_right"
            android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_left"
            android:text="TextView"
            android:textColor="@color/BlackOak"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gobackImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/next" />

</LinearLayout>