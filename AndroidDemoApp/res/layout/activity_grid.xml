<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/basic"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/View01"
            android:layout_width="wrap_content"
            android:layout_height="26dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/logoColor"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b1"
                android:tag="1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b2"
                android:tag="2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b3"
                android:tag="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ImageButton4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b4"
                android:tag="4" />

            <ImageButton
                android:id="@+id/ImageButton5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b5"
                android:tag="6" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b6"
                android:tag="7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ImageButton7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b7"
                android:tag="8" />

            <ImageButton
                android:id="@+id/ImageButton8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b8"
                android:tag="17" />

            <ImageButton
                android:id="@+id/ImageButton9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/ClearColor"
                android:scaleType="fitXY"
                android:src="@drawable/b9"
                android:tag="15" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_right"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/infoBut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:background="@color/ClearColor"
            android:scaleType="fitXY"
            android:tag="info"
            android:src="@drawable/info_icon" />

    </LinearLayout>

</LinearLayout>